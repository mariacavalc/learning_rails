<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
    </h1>
  <p class="lead"><%=@friend.email%>  |  <%=@friend.phone%>  |  <%=@friend.twitter%></p>
  <br/>
  <p class="lead">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <br/>
    <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-secondary"%>
  </p>
</div>

